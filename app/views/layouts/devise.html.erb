</head>

<body style="background-color: #ffffff !important;">
  <%= render :partial => 'layouts/fb_init' %>
  <div class="container">
    <%= render :partial => 'layouts/header' if user_signed_in? && current_user.registration_complete? %>
   <%#  if user_signed_in? && current_user.registration_complete? %>
   <%# if current_user.registration_complete? if user_signed_in?%>
