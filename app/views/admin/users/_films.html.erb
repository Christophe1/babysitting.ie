<% if collection.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= Film.human_attribute_name(:id) %></th>
        <th><%= Film.human_attribute_name(:name) %></th>
        <th><%= Film.human_attribute_name(:genres) %></th>
        <th><%= FilmUser.human_attribute_name(:comments) %></th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |item| %>
        <tr>
          <td><%= item.film_id %></td>
          <td><%= item.film.try(:name) %></td>
          <td><%= item.genres_list %></td>
          <td><%= item.comments %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
 <p><%= t('admin.empty_list') %></p>
<% end %>