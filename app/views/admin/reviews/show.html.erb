<p>
  <strong><%= resource_class.human_attribute_name(:category) %>:</strong><br>
  <%= resource.categories_list %>
</p>
<p>
  <strong><%= resource_class.human_attribute_name(:name) %>:</strong><br>
  <%= resource.name %>
</p>
<p>
  <strong><%= resource_class.human_attribute_name(:phone) %>:</strong><br>
  <%= resource.phone %>
</p>
<p>
  <strong><%= resource_class.human_attribute_name(:address) %>:</strong><br>
  <%= resource.address %>
</p>
<p>
  <strong><%= resource_class.human_attribute_name(:user) %>:</strong><br>
  <%#= render("users", :collection => resource.user) %>
  <%= resource.user %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), collection_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_resource_path, :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), resource_path, :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger' %>
</div>
