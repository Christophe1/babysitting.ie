<% if collection.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:id) %></th>
        <th><%= User.human_attribute_name(:external_user_id) %></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= FilmUser.human_attribute_name(:genres) %></th>
        <th><%= FilmUser.human_attribute_name(:comments) %></th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |item| %>
        <tr>
          <td><%= item.user_id %></td>
          <td><%= item.user.try(:external_user_id) %></td>
          <td><%= item.user.try(:name) %></td>
          <td><%= item.user.try(:email) %></td>
          <td><%= item.genres_list %></td>
          <td><%= item.comments %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
 <p><%= t('admin.empty_list') %></p>
<% end %>