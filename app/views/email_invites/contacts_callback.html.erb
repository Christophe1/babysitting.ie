<div id="no-contacts" style="display:none;width:100%;font:13px/27px Arial,sans-serif">
  <div style="border-bottom:1px solid #e5e5e5">
    <img src="<%= asset_path('logo.jpg') %>" />
  </div>
  <div style="padding:10px">
    <h3 style="margin:0"><%= t('email_invites.callback_header') %></h3>
    <%= t('email_invites.callback_no_contacts') %>
    <div>
      <a href="#" onclick="window.close()"><%= t('email_invites.callback_close_link') %></a>
    </div>
  </div>
</div>

<script type="text/javascript">
  var contacts = <%= @contacts.html_safe %>;
  if (contacts.length > 0) {
    window.opener.renderInvitationForm(contacts);
    window.close();
  } else {
    document.getElementById('no-contacts').style.display = "block";
  }
</script>
